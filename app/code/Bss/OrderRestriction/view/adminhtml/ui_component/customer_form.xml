<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="order_restriction" class="Bss\OrderRestriction\Ui\Component\Customer\Form\OrderRestrictionFieldset">
        <settings>
            <label translate="true">Order Restriction</label>
        </settings>

        <field name="id" formElement="hidden">
            <settings>
                <dataType>text</dataType>
                <dataScope>entity_id</dataScope>
            </settings>
        </field>

        <field name="qty_per_order" formElement="input">
            <settings>
                <label translate="true">Limit Quantity per Order</label>
                <dataType>number</dataType>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="orders_per_month" formElement="input">
            <settings>
                <label translate="true">Limit Orders per Month</label>
                <dataType>number</dataType>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="sales_order_report"
               formElement="input"
               component="Bss_OrderRestriction/js/view/customer-sales-order-report">
            <settings>
                <elementTmpl>Bss_OrderRestriction/customer-sales-order-report</elementTmpl>
                <label translate="true">30 Days Order Chart</label>
            </settings>
        </field>
    </fieldset>
</form>
