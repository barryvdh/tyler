<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="order_restriction" class="">
        <settings>
            <label translate="true">Order Restriction</label>
        </settings>

        <field name="limit_qty_per_order">
            <settings>
                <label translate="true">Limit Quantity per Order</label>
                <dataType>number</dataType>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="limit_order_per_month">
            <settings>
                <label translate="true">Limit Order per Month</label>
                <dataType>number</dataType>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
</form>
