<?xml version="1.0" encoding="UTF-8" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceContainer name="content">
            <block name="order_restriction_info"
                   class="Bss\OrderRestriction\Block\Customer\Account\OrderRestrictionInfo"
                   ifconfig="bss_order_restriction/general/enable" after="-">
                <action method="setTemplate">
                    <argument name="template" xsi:type="string">Bss_OrderRestriction::account/order_restriction_info.phtml</argument>
                </action>
                <container name="customer.account.dashboard.order_restriction.blocks" as="additional_blocks"/>
            </block>
        </referenceContainer>
    </body>
</page>
