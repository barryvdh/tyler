<?xml version="1.0" encoding="UTF-8" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="unread_system_messages">
            <action method="setTemplate">
                <argument name="template" xsi:type="helper" helper="Bss\AggregateCustomize\Helper\Data::setTemplate">
                    <param name="defaultTemplate">Magento_AdminNotification::system/messages/popup.phtml</param>
                </argument>
            </action>
        </referenceBlock>
        <referenceBlock name="notification_window">
            <action method="setTemplate">
                <argument name="template" xsi:type="helper" helper="Bss\AggregateCustomize\Helper\Data::setTemplate">
                    <param name="defaultTemplate">Magento_AdminNotification::notification/window.phtml</param>
                </argument>
            </action>
        </referenceBlock>
        <referenceBlock name="notification.messages">
            <action method="setTemplate">
                <argument name="template" xsi:type="helper" helper="Bss\AggregateCustomize\Helper\Data::setTemplate">
                    <param name="defaultTemplate">Magento_AdminNotification::toolbar_entry.phtml</param>
                </argument>
            </action>
        </referenceBlock>
    </body>
</page>
